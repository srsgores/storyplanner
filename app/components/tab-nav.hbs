<nav class="tab-nav" ...attributes>
	<ul class="tab-nav-items">
		{{#each @navItems as |navItem|}}
			<li class="tab-nav-item">
				<LinkTo @route={{navItem.route}} @model={{navItem.model}} class="tab-nav-item-link">
					{{#if navItem.text.length}}
						{{navItem.text}}
					{{/if}}
					{{#if navItem.icon}}
						{{svg-jar navItem.icon class="nav-item-icon"}}
					{{/if}}
				</LinkTo>
			</li>
		{{/each}}
	</ul>
	{{yield}}
</nav>
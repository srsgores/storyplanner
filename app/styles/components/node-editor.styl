:root
	--node-background-colour rgba(13, 109, 98, 0.61)
	--node-padding 1em
	--event-node-subsequent-margin 3em
.node
	&-editor
		position relative
		&:hover
			.contextual-action
				opacity 1
	&-summary
		margin 0 -1em
	&:hover
		opacity 1


.node[draggable]
	cursor move
	opacity 0.9
	transition transform 0.4s ease, opacity 0.2s ease
.contextual-action
	transition 0.3s ease opacity
	position absolute
	z-index 1
	bottom 0
	right 0
	opacity 0
.event
	display inline-block
	vertical-align middle
	&-container
		& + &
			margin-left var(--event-node-subsequent-margin)
			position relative
			&::before
				content ""
				position absolute
				right 100%
				top 50%
				width calc(var(--event-node-subsequent-margin) + 0.2em)
				border-bottom 0.3em dotted
	.node-editor
		background-color var(--node-background-colour)
		padding var(--node-padding)
		box-sizing border-box
	&-meta-duration
		text-align center
		display block
		border-bottom 0.4em dotted
		margin 1em 0
		padding 0.8em
		opacity 0.8
		font-size 0.85em

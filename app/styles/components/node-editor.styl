.node
	margin 1em
	padding 1em
	border 0.1em solid
	&-editor
		position relative
		&:hover
			.contextual-action
				opacity 1
	&-summary
		margin 0 -1em
	&:hover
		opacity 1
	& + .node
		margin-left 1.5em
		position relative
		&::before
			content "âž¡"
			position absolute
			right calc(100% + 1em)
			top 50%

.node[draggable]
	cursor move
	opacity 0.9
	transition transform 0.4s ease, opacity 0.2s ease
.contextual-action
	transition 0.3s ease opacity
	position absolute
	z-index 1
	bottom 0
	right 0
	opacity 0
.add-after
	position absolute
	right -4em
	top 50%

.node
	margin 1em
	padding 1em
	border 0.1em solid
	&:hover
		opacity 1
	& + .node
		margin-left 1.5em
		position relative
		&::before
			content "âž¡"
			position absolute
			right calc(100% + 1em)
			top 50%

.node[draggable]
	cursor move
	opacity 0.9
	transition transform 0.4s ease, opacity 0.2s ease

.form-field
	label
		display block
		cursor pointer

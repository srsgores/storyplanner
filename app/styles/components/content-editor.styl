.mobiledoc-editor__editor
	h1
		font-size 2.3em
	h2
		font-size 1.8em
	h3
		font-size 1.5em
	h4
		font-size 1.2em
	h6
		font-size 1.1em
	i, em
		font-style italic
	strong
		font-weight bold
	ul, ol
		padding 1em 2em
		box-sizing border-box
	ul
		list-style-type disc
	ol
		list-style-type decimal
	line-height 1.5
	* + *
		margin-top 1em
	color inherit
	blockquote
		padding 1em 1.5em
		box-sizing border-box
		color inherit
		border-left 0.3em solid currentColor
		opacity 0.9
		font-style italic
.mobiledoc-toolbar
	&__control
		display inline-block
		vertical-align middle
		abbr
			font-size 1.3em
			text-decoration none
	&__container
		display flex
		justify-content space-between
		align-items center
button
	background-color #6978ff
	transition 0.2s ease background-color
	color #fff
	font-weight bold
	border 0
	padding 0.5em 1em
	box-sizing border-box
	border-radius 0.5em
	cursor pointer
	&:hover, &.active
		background-color #2f3772

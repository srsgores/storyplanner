.mobiledoc-editor__editor
	line-height 1.5
	color inherit
	margin 0
	padding 1em
	box-sizing border-box
	border 1px solid #00000024
	background-color rgba(43, 43, 43, 0.09)
	h1
		font-size 2.3em
	h2
		font-size 1.8em
	h3
		font-size 1.5em
	h4
		font-size 1.2em
	h6
		font-size 1.1em
	i, em
		font-style italic
	strong
		font-weight bold
	ul, ol
		padding 1em 2em
		box-sizing border-box
	ul
		list-style-type disc
	ol
		list-style-type decimal
	* + *
		margin-top 1em
	blockquote
		padding 1em 1.5em
		box-sizing border-box
		color inherit
		border-left 0.3em solid currentColor
		opacity 0.9
		font-style italic
.mobiledoc-toolbar
	&__control
		display inline-block
		vertical-align middle
		button
			padding 0
			border-radius 0
			background-color transparent
			cursor pointer
			&:hover, &.active
				background-color rgba(255, 255, 255, 0.17)
		abbr
			font-size 1.3em
			text-decoration none
	&__container
		display flex
		justify-content space-between
		align-items center
		padding 0.5em 1em
		box-sizing border-box
		background: #2b2b2b;
.__mobiledoc-editor.__has-no-content:after
	top 1em
.mobiledoc-editor
	&__link-prompt
		background-color #464646
		color inherit
		padding 2em 1em 1em 1em
		box-sizing border-box
		border 0.1em solid rgba(0, 0, 0, 0.46)
		.form-control
			min-width 20em
			border-bottom-color initial
button
	background-color #6978ff
	transition 0.2s ease background-color
	color #fff
	font-weight bold
	border 0
	padding 0.5em 1em
	box-sizing border-box
	border-radius 0.5em
	cursor pointer
	&:hover, &.active
		background-color #2f3772

:root
	--sidebar-width 20.5em
	--box-spacing calc(1.5em + 1.5%)

body
	margin 0
	padding 0
	font-family "Noto Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
	background #1f4037
	background linear-gradient(to right, #426f65, #41695e)
	color #fff
	display flex
	flex-direction column

html, body
	height 100%

.grid
	display flex
	height inherit

.events
	white-space nowrap
	overflow-x auto
	padding-bottom 2em
	box-sizing border-box

.event-container
	display inline-block
	vertical-align middle

.link-actions
	display inline-block
	vertical-align initial
	transition 0.3s ease opacity
	opacity 0.7
	&:hover
		opacity 1
	.link-action button
		padding 0
		border-radius 0
		background-color transparent

a
	color inherit
	&:visited
		color #ffd2d2

.visuallyhidden, dl dt
	clip rect(0 0 0 0)
	clip-path inset(50%)
	height 1px
	overflow hidden
	position absolute
	white-space nowrap
	width 1px

header[role="banner"]
	display flex
	align-items center
	box-sizing border-box
	justify-content space-between
	padding 1em

main[role="main"]
	height inherit
	flex 1

.nav-item-link
	display block
	padding 0.5em 1em
	box-sizing border-box

.story-list
	& + .story-editor-container
		background-color rgb(56 56 56)
		flex 1
		margin-left calc(var(--sidebar-width) / -2)

.overlayed
	box-shadow 0 2.8px 2.3px rgba(0, 0, 0, 0.02),
	0 6.7px 5.5px rgba(0, 0, 0, 0.028),
	0 12.5px 10.4px rgba(0, 0, 0, 0.035),
	0 22.3px 18.5px rgba(0, 0, 0, 0.042),
	0 41.8px 34.7px rgba(0, 0, 0, 0.05),
	0 100px 83px rgba(0, 0, 0, 0.07)

nav[role="navigation"]
	display flex
	justify-content space-between
svg
	fill currentColor
	vertical-align middle
	display inline-block
	width auto
	height 100%
.rotate-90
	transform rotate(90deg)
.add-after
	height 3em
@import "_forms"
@import "components/*"
